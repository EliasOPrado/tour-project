# /etc/nginx/sites-available/tour_project                                                                      
server {
    listen 80;
    server_name localhost;

    # Django app via Gunicorn socket
    location / {
        proxy_pass http://unix:/run/gunicorn.sock;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Static files
    location /static/ {
        alias /home/elias-prado/software_projects/tour_project/main_tour_folder/staticfiles/;
    }


    # Media files
    location /media/ {
        alias /home/elias-prado/software_projects/tour_project/media/;
    }
}

